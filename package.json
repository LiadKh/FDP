{
  "name": "fdp",
  "version": "1.0.0",
  "description": "FDP - View validation",
  "main": "./server/bin/www",
  "private": true,
  "engines": {
    "node": ">=12.0.0"
  },
  "scripts": {
    "postinstall": "cd ./client; npm i",
    "test": "echo \"Error: no test specified\" && exit 1",
    "server": "cross-env NODE_ENV=development run-script-os",
    "server:darwin:linux": "DEBUG=fdp:* nodemon ./server/bin/www",
    "server:win32": "set DEBUG=fdp:* & nodemon ./server/bin/www",
    "client": "cd ./client; npm start",
    "db": "run-script-os",
    "db:win32": "cd ./database/mongodb/scripts/windows& setup.bat",
    "db:darwin:linux": "cd ./database/mongodb/scripts/linux; sh setup.sh",
    "flow": "flow",
    "flow-stop": "flow stop",
    "dev": "concurrently -c \"yellow.bold,magenta.bold,blue.bold\" -n \"DATABASE,CLIENT,SERVER\" npm:db npm:client npm:server",
    "start": "cd ./client; npm run build; cd ..; cross-env NODE_ENV=production node ./server/bin/www"
  },
  "dependencies": {
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "express": "~4.16.1",
    "mongoose": "^5.7.11",
    "morgan": "~1.9.1"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.3",
    "concurrently": "^5.0.0",
    "cross-env": "^6.0.3",
    "dotenv": "^8.2.0",
    "eslint": "^6.1.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-flowtype": "^4.4.1",
    "eslint-plugin-import": "^2.18.2",
    "flow-bin": "^0.112.0",
    "husky": "^3.0.9",
    "jsonlint": "^1.6.3",
    "lint-staged": "^9.4.3",
    "nodemon": "^1.19.4",
    "prettier": "^1.19.1",
    "run-script-os": "^1.0.7"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LiadKh/FDP.git"
  },
  "keywords": [
    "FDP",
    "validation",
    "node.js",
    "react"
  ],
  "author": {
    "name": "Liad Khamdadash",
    "url": "https://github.com/LiadKh"
  },
  "contributors": [
    {
      "name": "Liad Khamdadash",
      "url": "https://github.com/LiadKh"
    },
    {
      "name": "Slava Kagan",
      "url": "https://github.com/SlavaKagan"
    }
  ],
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/LiadKh/FDP/issues"
  },
  "homepage": "https://github.com/LiadKh/FDP#readme",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-commit": "git update-index --again"
    }
  }
}
