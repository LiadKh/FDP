{
  "name": "fdp",
  "version": "1.0.0",
  "description": "FDP - View validation",
  "main": "./server/bin/www",
  "private": true,
  "engines": {
    "node": ">=12.0.0"
  },
  "scripts": {
    "postinstall": "cd ./client&& npm i",
    "test": "echo \"Error: no test specified\" && exit 1",
    "server": "cross-env NODE_ENV=development DEBUG=* nodemon ./server/bin/www",
    "client": "cd ./client&& npm start",
    "db": "run-script-os",
    "db:win32": "cd ./database/mongodb/scripts/windows&& setup.bat",
    "db:darwin:linux": "cd ./database/mongodb/scripts/linux&& sh setup.sh",
    "flow": "flow",
    "flow-stop": "flow stop",
    "dev": "concurrently -c \"yellow.bold,magenta.bold,blue.bold\" -n \"DATABASE,CLIENT,SERVER\" npm:db npm:client npm:server",
    "start": "cd ./client&& npm run build&& cd ..&& cross-env NODE_ENV=production node ./server/bin/www",
    "lint": "eslint --ignore-path ./.gitignore .",
    "lint-fix": "eslint --ignore-path ./.gitignore --fix ."
  },
  "dependencies": {
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "express": "~4.16.1",
    "mkdirp": "^0.5.1",
    "mongoose": "^5.7.11",
    "mongoose-transactions": "^1.1.4",
    "morgan": "~1.9.1",
    "validator": "^12.0.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.8.0",
    "@typescript-eslint/parser": "^2.8.0",
    "babel-eslint": "^10.0.3",
    "concurrently": "^5.0.0",
    "cross-env": "^6.0.3",
    "dotenv": "^8.2.0",
    "eslint": "^6.7.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-config-react-app": "^5.0.2",
    "eslint-plugin-flowtype": "^3.13.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-json": "^2.0.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.16.0",
    "eslint-plugin-react-hooks": "^1.7.0",
    "express-routes-catalogue": "^1.0.2",
    "flow-bin": "^0.112.0",
    "husky": "^3.0.9",
    "jsonlint": "^1.6.3",
    "lint-staged": "^9.4.3",
    "nodemon": "^1.19.4",
    "prettier": "1.19.1",
    "react": "^16.12.0",
    "run-script-os": "^1.0.7",
    "ts-node": "^8.5.2",
    "typescript": "^3.7.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LiadKh/FDP.git"
  },
  "keywords": [
    "FDP",
    "validation",
    "node.js",
    "react"
  ],
  "author": {
    "name": "Liad Khamdadash",
    "url": "https://github.com/LiadKh"
  },
  "contributors": [{
      "name": "Liad Khamdadash",
      "url": "https://github.com/LiadKh"
    },
    {
      "name": "Slava Kagan",
      "url": "https://github.com/SlavaKagan"
    }
  ],
  "bugs": {
    "url": "https://github.com/LiadKh/FDP/issues"
  },
  "homepage": "https://github.com/LiadKh/FDP#readme",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-commit": "git update-index --again"
    }
  }
}
