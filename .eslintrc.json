{
  "root": true,
  "env": {
    "commonjs": true,
    "mongo": true,
    "shared-node-browser": true
  },
  "extends": [
    "airbnb",
    "airbnb/hooks",
    "plugin:node/recommended",
    "eslint:recommended",
    "plugin:import/errors",
    "plugin:import/warnings",
    "plugin:jsx-a11y/recommended",
    "plugin:json/recommended",
    "plugin:prettier/recommended",
    "prettier/flowtype",
    "prettier/standard"
  ],
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "parser": "babel-eslint",
  "plugins": [
    "prettier"
  ],
  "rules": {
    "prettier/prettier": [
      "off",
      {},
      {
        "usePrettierrc": true
      }
    ]
  }
}